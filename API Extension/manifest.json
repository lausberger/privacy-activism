{
  "manifest_version": 3,
  "name": "Location Spoofer",
  "version": "0.1",

  "description": "Spoofs the user's location, hopefully",

  "author": "Lucas Ausberger",
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["script.js", "geoSpoofer.js"],
    "matches": ["<all_urls>"]
  }],
  "permissions": [
    "geolocation",
    "scripting"
  ]
}

